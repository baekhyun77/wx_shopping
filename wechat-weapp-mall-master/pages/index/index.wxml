<!--index.wxml-->
<view class="container">

<view class="weui-search-bar">
    <view class="weui-search-bar__form">
        <view class="weui-search-bar__box">
            <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
            <input type="text" class="weui-search-bar__input" placeholder="搜索" model:value="{{inputSearch}}" 
            placeholder-class="plac" bindinput="searchInput" />
        
        </view>
    </view>
    <view class="weui-search-bar__cancel-btn" bindtap="search">搜索</view>

</view>
<!-- end-section search searchBar -->
<!-- 公告 -->
<swiper class="swiper_container" vertical="true" autoplay="true" circular="true" interval="2000">
<block wx:for="{{inforList}}" bindtap="goNotice" >
  
    <swiper-item>
      <view class="content-text">   {{item.announce_text}}</view>
    </swiper-item>
</block>

</swiper>
<!-- 公告 end -->
<view class='comic_tab'>
    <view class='comic_tabb' bindtap='allCommodity'>
      <view class='{{currentTab==0?"active":""}}'>
        全部
      </view>
      <view class='{{currentTab==0?"comic_border":""}}'></view>
    </view>
    <view class='comic_tabb' bindtap='hotCommodity'>
      <view class='{{currentTab==1?"active":""}}'>
        热度
      </view>
      <view class='{{currentTab==1?"comic_border":""}}'></view>
    </view>
    <view class='comic_tabb' bindtap='newCommodity'>
      <view class='{{currentTab==2?"active":""}}'>
        最新
      </view>
      <view class='{{currentTab==2?"comic_border":""}}'></view>
    </view>
    <view class='comic_tabb' bindtap='likeCommodity'>
      <view class='{{currentTab==3?"active":""}}'>
        推荐
      </view>
       <view class='{{currentTab==3?"comic_border":""}}'></view> 
    </view>
</view>

<!-- 首页商品版块 -->
<view class="section block">

  <view class="section goods-list">
    <view wx:if="{{collectionList == ''}}">
      <view class='imagesize'>
        <image src="/images/kongshangpin.png" class='in-image'   >
        </image>
      </view>
    </view> 
    <block wx:for="{{goodList}}" wx:key="index" wx:for-item="product">
      <view class="goods-item">
        <image class="goods-img" src="{{product.commodity_image}}" data-pid="{{product.commodity_id}}" mode="aspectFill" bindtap="showDetail"/>
        <!--<text class="title">{{product.commodity_name}}</text>-->
        <view class="title" data-pid="{{product.commodity_id}}" bindtap="showDetail">{{product.commodity_name}}</view>

      <!--	<text class="desp">{{product.commodity_describe}}</text>-->
        <text class="meta">{{product.commodity_price}}￥</text>
        <text class="discount">销量：{{product.commodity_sales}}</text>
      </view>
    </block>
    <image src='../../images/backtop.png' class='goTop' hidden='{{!floorstatus}}' bindtap="goTop"></image>

  </view>
  
<!-- </block> -->
</view>
<!-- end-section block -->
<view class="section bottom-line">
<image src="/images/dibu.png" mode="bottom" ></image>
</view>
</view>