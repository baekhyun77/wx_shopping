/* pages/selectGoods/selectGoods.wxss */
@import "../../../lib/weui.wxss";
.weui-cells:nth-child(1) {
    margin-top: 0;
}

.weui-cells {
    margin-top: 10rpx;
}
.weui-cell {
    padding-top: 30rpx;
    padding-bottom: 30rpx;
}

/*顶部cell样式*/

.weui-cell__hd.head {
    border: 1px solid #dcdcdc;
    border-radius: 4rpx;
}

.weui-cell__hd.head image {
    width: 160rpx;
    height: 160rpx;
    vertical-align: middle;
}

.preview .weui-cell__bd {
    margin-left: 20rpx;
}

.weui-cell__bd .meta {
    margin-top: 10rpx;
    font-size: 11pt;
    color: #ff6700;
}

.subtitle {
    font-size: 11pt;
    color: #9c9c9c;
}

/*促销样式*/

.on-sale text {
    display: inline-block;
    margin-left: 10rpx;
    font-size: 11pt;
}

.on-sale text:first-child {
    margin-left: 0;
}

.on-sale text:nth-child(2) {
    margin-left: 40rpx;
    padding: 0 20rpx;
    color: #ff6700;
    border: 1px solid #ff6700;
    border-radius: 4rpx;
}

/*版本选择样式*/

.weui-cell.attr-version {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    width: 100%;
}

.select-version {
    display: flex;
    flex-direction: column;
}

.select-version label {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 634rpx;
    margin-top: 14rpx;
    font-size: 11pt;
    padding: 16rpx 26rpx;
    border-radius: 6rpx;
    border: 1px solid #dcdcdc;
}

/*颜色选择样式*/

.weui-cell.attr-color {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.select-color {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.select-color label {
    display: inline-block;
    width: 96rpx;
    padding: 16rpx 30rpx;
    margin: 8rpx;
    font-size: 11pt;
    text-align: center;
    border: 1px solid #dcdcdc;
    border-radius: 6rpx;
}

.select-color label:nth-child(1) {
    margin-left: 0;
}
.select-color label.on{
    color: #ff6700;
    border: 1px solid #ff6700;
}
.select-version label.on{
    color: #ff6700;
    border: 1px solid #ff6700;
}
/*数量选择样式*/

.select-number {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 240rpx;
    margin-left: 310rpx;
    border: 1px solid #dcdcdc;
    border-radius: 6rpx;
}

.select-number view {
    flex: 1;
    text-align: center;
    padding: 16rpx;
}

.select-number view:first-child {
    border-right: 1px solid #dcdcdc;
}

.select-number view:last-child {
    border-left: 1px solid #dcdcdc;
}

.select-number image {
    width: 32rpx;
    height: 32rpx;
}

.btn-primary {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
    background: #ff6700;
}
