/* pages/goods/show.wxss */
@import "../../lib/weui.wxss";
.goods-swiper .slide {
    width: 100%;
    height: 1000rpx;
  }
  
  .goods-swiper .slide-image {
    width: 100%;
    display: block;
  }
  
  .weui-cells:nth-child(1) {
    margin-top: 0;
  }
  
  .weui-cell__bd view {
    margin-top: 10rpx;
  }
  
  .weui-cell__bd .title {
    margin-top: 0;
    font-size: 12pt;
  }
  
  .weui-cell__bd .desp {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 9pt;
    color: #666;
  }
  .details_box {
    display: flex;
    height: 80px;
    margin: 5px;
    border: 3rpx solid #faca82;
    border-radius: 10rpx;
  }
  
  .text-ti {
    position: absolute;
    font-size: 12px;
    background: white;
    margin: -10px 0 0 10px;
    padding: 0 5px;
    color: rgb(144, 147, 167);
  }

  .weui-cell__bd .meta {
    font-size: 12pt;
    font-weight: bold;
    color: #ff4a00;
  }
  
  .select .weui-cell__bd {
    padding: 30rpx 14rpx;
  }
  
  .weui-cells.select {
    margin-top: 10rpx;
  }
  
  .on-sale text{
    display: inline-block;
    margin-left: 10rpx;
    font-size: 11pt;
  }
  .on-sale text:first-child{
    margin-left: 30rpx;
  }
  .on-sale text:nth-child(2){
    margin-left: 40rpx;
    padding: 0 20rpx;
    color: #ff6700;
    border: 1px solid #ff6700;
    border-radius: 4rpx;
  }
  
  .weui-cell__bd.selected {
    padding: 14rpx;
  }
  
  .weui-cell__bd.selected text {
    display: inline-block;
    margin-left: 30rpx;
    font-size: 11pt;
  }
  
  .weui-cell__bd.selected text:nth-child(1) {
    margin-left: 0;
  }
  
  .weui-cell__subtitle,
  .weui_cell__num {
    font-size: 10pt;
    color: #9c9c9c;
  }
  .weui-cell {
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    /* -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center; */
    flex-direction: row;
    justify-content: space-between;
  }

  .weui-cell_promise {
    padding: 10rpx 36rpx;
  }
  
  .weui-cell__bd.intro {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 9pt;
  }
  
  .weui-cell__hd.success image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
  }
  
  .user-operation {
    display: flex;
    flex-direction: row;
    align-items: center;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    z-index: 2;
    border-top: 1px solid #efefef;
  }
  
  .cart {
    flex: 1;
    height: 100rpx;
    background: rgb(232, 238, 241);
    
  }
  .cart image {
    width: 60rpx;
    height: 60rpx;
    position: relative;
    top: 18rpx;
    left: 20rpx;
    
  }
  .cart .badge{
    display: inline-block;
    width: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    position: absolute;
    top: 10rpx;
    left: 60rpx;
    font-size: 11px;
    color: #fff;
    text-align: center;
    z-index: 2;
    background: #ff4a00;
    border-radius: 50%;
  }
  .add-cart,
  .btn-buy-now {
    flex: 3;
    color: #fff;
    background: #ff6700;
    height: 100rpx; line-height: 100rpx; border-radius: 100rpx;
     color: #fff; font-size: 36rpx; text-align: center; 
  }
  
  .btn-buy-now {
    background: #ea5f39;
  }
  .btn-buy-i {
    flex: 3;
    height: 100rpx; line-height: 100rpx; border-radius: 100rpx;
    background-color: #d3a95a; color: #fff; font-size: 36rpx; text-align: center; 
  }
  .btn-buy-i {
    background: #f17b5a;
  }
  .goods-intro .tab-select{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 80rpx;
    margin-top: 14rpx;
    background: #fff;
  }
  .brief,.parameter{
    flex: 1;
    font-size: 10pt;
    text-align: center;
  }
  .tab-select text{
    padding: 16rpx;
  }
  .on{
    color: #ff6700;
    border-bottom: 2px solid #ff6700;
  }
  .goods-intro image{
    display: block;
    width: 100%;
  }
  .parameter-info,.brief-info{
    display: none;
  }
  .show{
    display: block;
  }