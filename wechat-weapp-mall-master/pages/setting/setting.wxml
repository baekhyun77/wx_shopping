<text class='class_title'>基础信息</text>
<view class='information'>
  <view class="weui-cells weui-cells_after-title"  data-type="user_show" data-content="{{$state.user_show}}">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">昵称</view>
      </view>
      <view class="weui-cell__bd">
        <view class='weui-input'>{{$state.user_show}}</view>
      </view>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title" catchtap='_prefect' data-type="user_name" data-content="{{$state.user_name}}">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">姓名</view>
      </view> 
      <view class="weui-cell__bd">
        <view class='weui-input'>{{$state.user_name}}</view>
      </view>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title" catchtap='_prefect' data-type="user_email"  data-content="{{$state.user_email}}">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">邮箱</view>
      </view>
      <view class="weui-cell__bd">
        <view class="weui-input allOrder">{{$state.user_email}}</view>
      </view>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title" data-type="user_phone"  data-content="{{$state.user_phone}}">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">手机号</view>
      </view>
      <view class="weui-cell__bd">
        <view class='weui-input' data-phone='{{$state.user_phone}}'>{{$state.user_phone}}</view>
      </view>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title" catchtap='_prefect' data-type="user_address" data-content="{{$state.user_address}}"> 
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">地址</view>
      </view>
      <view class="weui-cell__bd">  
          <view class="weui-input allOrder">{{$state.user_address}}</view>
      </view>
    </view>
  </view>
</view>

<text class='class_title'>更多</text>
<view class='information other'>
  <view catchtap='_goAddress'>
    <text>收货地址</text>
  
  </view>
</view>

<view style='height:20rpx;'></view>