@import '../template/shuju/shuju.wxss';
.top-container {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 10;
  background-color: #fff;
}

.order-status-tab {
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  border-bottom: 1px solid #f0eff5;
}
.order-status-tab .tab-item {
  width: 20%; 
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
}

.order-status-tab .tab-item.active {
  color: #e41436;
  position: relative;
}

.order-status-tab .tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100rpx;
  background: #e41436;
  position: absolute;
  transform: translate(25%);
  bottom: 0;
}

.separator2 {
  width: 100%;
  height: 80rpx;
}

.separator3 {
  height: 15rpx;
  border-bottom: 1px solid #f0eff5;
  /* margin: 0 0 0 25rpx; */
}

.order-list-container {
  padding-bottom: 20rpx;
}

.order-item {
  margin-top: 20rpx;
  padding: 0rpx 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.item-info-1 {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #000;
  font-size: 28rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.item-info-2 {
  border: 1px solid #f0eff5;
  display: flex;
  flex-direction: column;
}

.my-order_title {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 36rpx;
  font-size: 28rpx;
  color: #000;
  box-sizing: border-box;
  border-bottom: 1px solid #f0eff5;
}

.my-order_con {
  background-color: #fafafa;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
}

.my-order_con image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.goods_title {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}

.title_con {
  width: 75%;
}

.title_con text {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.price_num {
  width: 35%;
  display: flex;
  flex-direction: column;
  text-align: right;
}

.item-info-3 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.item-info-4 {
  margin-top: 20rpx;
  font-size: 28rpx;
}

.operation {
  overflow: hidden;
}

.operation view {
  float: right;
  border-radius: 10rpx;
  padding: 4rpx 14rpx;
  margin-left: 10rpx;
}

.cancel {
  background-color: #f7f7f7;
  color: #454545;
  border: 1rpx solid #454545;
}

.payment {
  background-color: #e00003;
  color: #fff;
  border: 1rpx solid #e00003;
}
/* pages/cart/cart.wxss */
@import "../../lib/weui.wxss";
#cart{
  position: relative;
  width: 100%;
  background-color: #eeeeee;
  min-height: 100vh;
  padding-bottom: 80px;
}
#cart .top{
  background-color: #fff;
  border-radius: 0 0 15px 15px;
}
#cart .top .titles{
  width: 100%;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #eeeeee;
  padding-bottom: 10px;
}
#cart .top .titles .icon{
  margin: 0 15px;
}
#cart .top .address{
  display: flex;
  justify-content: space-between;
  padding: 15px;
}
#cart .top .address .location{
  font-size: 0.8rem;
}
#cart .top .address .edit{
  padding: 0 10px;
  font-size: 0.9rem;
  border-left: 2px solid #eeeeee;
}

#cart .shop{
  padding: 15px;
  background-color: #fff;
  margin-top: 15px;
  border-radius: 15px;
  padding-bottom: 0;
}

#cart .shop .goods{
  display: flex;
  padding: 10px 0;
  border-bottom: 1px solid #eeeeee;
}
#cart .shop .goods .select{
  display: flex;
  align-items: center;
}
checkbox .wx-checkbox-input {
  border-radius: 50%;
  border-color:red;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  background: red;
  color: #fff;
}
#cart .shop .goods .img-box{
  flex: 1;
  padding: 5px;
  position: relative;
}
#cart .shop .goods .img-box .img{
  width: 100%;
}
#cart .shop .goods .info{
  flex: 2;
  padding: 5px;
  position: relative;
  overflow: hidden;
}
#cart .shop .goods .info .title{
  font-size: 0.8rem;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
  overflow: hidden;
}
#cart .shop .goods .info .spec{
  font-size: 0.7rem;
  display: flex;
  white-space: nowrap;
  background-color: rgba(0, 0, 0, 0.05);
  padding: 1px 5px;
  border-radius: 30px;
  margin-top: 5px;
}
#cart .shop .goods .info .spec .name{
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
#cart .shop .goods .info .price_count{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
#cart .shop .goods .info .user_address{
  font-size: 15px;
  flood-color: grey;
}
#cart .shop .goods .info .user_address{
  font-size: 10px;
  flood-color: grey;
}
#cart .shop .goods .info .price_count .price{
  font-size: 1rem;
  font-weight: bold;
  color: red;
}
#cart .shop .goods .info .price_count .count{
  display: flex;
  align-items: center;
}
#cart .shop .goods .info .price_count .count .num{
  background-color: rgba(0, 0, 0, 0.05);
  padding: 0 15px;
  font-size: 0.7rem;
  margin: 0 5px;
  font-weight: bold;
}
#cart .shop .goods .info .price_count .count .btn{
  font-weight: bold;
  padding: 10px;
}
#cart .shop .goods .info .bottom{
  display: flex;
  justify-content: flex-end;
}
#cart .shop .goods .info .bottom .self{
  background-color: red;
  padding: 0px 5px;
  border-radius: 3px;
  color: #fff;
  font-size: 0.7rem;
  /* margin-left: 5px; */
  float: left;
  margin-left: 5px;
}
#cart .shop .goods .info .bottom .follow{
  font-size: 0.7rem;
  padding: 0 5px;
  border-right: 2px solid #eeeeee;
}
#cart .shop .goods .info .bottom .delete{
  font-size: 0.7rem;
  padding: 0 5px;
  color: red;
}
#cart .settle{
  position: fixed;
  left: 0;
  bottom: 0px;
  width: 100%;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px;
  box-sizing: border-box;
}
#cart .settle .check{
  font-size: 0.9rem;
  margin-right: 10px;
  white-space: nowrap;
}
#cart .settle .total{
  display: flex;
  align-items: center;
 
}
#cart .settle .total .price{
  white-space: nowrap;
}
#cart .settle .total .btn{
  background-color: red;
  border-radius: 30px;
  color: #fff;
  padding: 6px 20px;
  font-size: 0.9rem;
  font-weight: bold;
  margin-left: 10px;
  white-space: wrap;
}

.specs-action-sheet .weui-half-screen-dialog__hd{
  height: 0 !important;
}
.specs-action-sheet .desc{
  display: flex;
  flex-direction: column;
  max-height: 70vh;
}
.specs-action-sheet .current{
  display: flex;
  padding-top: 15px;
  align-items: center;
  position: relative;
}
.specs-action-sheet .current .img-box{
  flex: 3;
}
.specs-action-sheet .current .img-box .img{
  width: 100%;
}
.specs-action-sheet .current .info{
  flex: 5;
  position: relative;
  overflow: hidden;
  padding: 0 10px;
}
.specs-action-sheet .current .info .price{
  font-weight: bold;
  font-size: 1rem;
  color: red;
}
.specs-action-sheet .current .info .name{
  font-size: 0.7rem;
}
.specs-action-sheet .current .info .name .txt{
  color: rgba(0, 0, 0, 0.5);
}
.specs-action-sheet .specs{
  overflow: auto;
  flex: 1;
  position: relative;
}
.specs-action-sheet .specs .item{
  background-color: rgba(0, 0, 0, 0.05);
  padding: 5px 10px;
  border-radius: 30px;
  margin-bottom: 15px;
  font-size: 0.8rem;
  width: fit-content;
}
.specs-action-sheet .specs .selected{
  border: 1px solid red;
  background-color: rgba(255, 0, 0, 0.1);
  color: red;
}
.specs-action-sheet .btn{
  background-color: red;
  color: #fff;
  width: 100%;
  border-radius: 30px;
  font-weight: normal;
  font-size: 0.8rem;
  margin-bottom: 30px;
}
.imagesize{
  display:flex;                    
  justify-content: center;        
 }
